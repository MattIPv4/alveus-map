{
  "name": "alveus-map",
  "version": "1.0.0",
  "description": "Interactive Map of Alveus Sanctuary",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "build:js": "esbuild --bundle --sourcemap --minify --target=es2020 --outfile=dist/map.js src/map.js",
    "build:css": "sass --style=compressed --embed-sources src/map.scss dist/map.css",
    "build:html": "posthtml src/index.html -o dist/index.html",
    "dev": "nodemon --ext html,js,scss,svg --watch src --exec \"npm run build && http-server dist\""
  },
  "author": "Matt (IPv4) Cowley",
  "license": "Apache-2.0",
  "devDependencies": {
    "esbuild": "^0.14.42",
    "http-server": "^14.1.0",
    "nodemon": "^2.0.16",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^1.7.4",
    "sass": "^1.52.1"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "svg-pan-zoom": "^3.6.1"
  }
}
